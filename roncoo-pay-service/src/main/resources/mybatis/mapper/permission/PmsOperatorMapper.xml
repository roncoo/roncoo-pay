<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.roncoo.pay.permission.dao.impl.PmsOperatorDaoImpl">

	<!-- Pms权限管理：操作员表 -->
	<sql id="pms_operator"> pms_operator </sql>
	<sql id="pms_role_operator"> pms_role_operator </sql>

	<resultMap id="beanMap" type="com.roncoo.pay.permission.entity.PmsOperator">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="version" property="version" jdbcType="INTEGER" />
		<result column="status" property="status" jdbcType="VARCHAR" />
		<result column="creater" property="creater" jdbcType="VARCHAR" />
		<result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
		<result column="editor" property="editor" jdbcType="VARCHAR" />
		<result column="edit_time" property="editTime" jdbcType="TIMESTAMP" />
		<result column="remark" property="remark" jdbcType="VARCHAR" />
		<result column="login_name" property="loginName" jdbcType="VARCHAR" />
		<result column="login_pwd" property="loginPwd" jdbcType="VARCHAR" />
		<result column="real_name" property="realName" jdbcType="VARCHAR" />
		<result column="mobile_no" property="mobileNo" jdbcType="VARCHAR"  />
		<result column="type" property="type" jdbcType="VARCHAR"  />
		<result column="salt" property="salt" jdbcType="VARCHAR"  />
	</resultMap>

	<insert id="insert" parameterType="com.roncoo.pay.permission.entity.PmsOperator" keyProperty="id" useGeneratedKeys="true">
		insert into
		<include refid="pms_operator" />
		(id,version,status,creater,create_time, editor, edit_time, remark, login_name, login_pwd,real_name,mobile_no,type,salt)
		values
		(#{id},0,#{status}, #{creater},#{createTime}, #{editor},#{editTime},#{remark},#{loginName},#{loginPwd},#{realName},#{mobileNo},#{type},#{salt})
	</insert>

	<update id="update" parameterType="com.roncoo.pay.permission.entity.PmsOperator">
		update
		<include refid="pms_operator" />
		<set>
		version = #{version}+1,
		creater = #{creater,jdbcType=VARCHAR},
		create_time = #{createTime,jdbcType=TIMESTAMP},
		editor = #{editor,jdbcType=VARCHAR},
		edit_time = #{editTime,jdbcType=TIMESTAMP},
		remark = #{remark,jdbcType=VARCHAR},
		status = #{status,jdbcType=VARCHAR},
		login_name = #{loginName,jdbcType=VARCHAR},
		login_pwd = #{loginPwd,jdbcType=VARCHAR},
		real_name = #{realName,jdbcType=VARCHAR},
		type = #{type,jdbcType=VARCHAR},
		salt = #{salt,jdbcType=VARCHAR},
		mobile_no = #{mobileNo,jdbcType=VARCHAR}	
		</set>
		<where>
			id = #{id} and version = #{version}
		</where>
	</update>

	<select id="selectByPrimaryKey" parameterType="Long" resultMap="beanMap">
		select * from
		<include refid="pms_operator" />
		where ID = #{id}
	</select>

	<select id="findByLoginName" parameterType="string" resultMap="beanMap">
		select * from
		<include refid="pms_operator" />
		where login_name = #{loginName}
	</select>

	<select id="listAll" resultMap="beanMap">
		select * from
		<include refid="pms_operator" />
		order by ID
	</select>

	<delete id="deleteByPrimaryKey" parameterType="Long">
		delete from
		<include refid="pms_operator" />
		where ID = #{id}
	</delete>

	<sql id="condition_sql">
		<!-- Equal query -->
		<if test="loginName != null and loginName != ''"> and login_name = #{loginName}</if>
		<if test="status != null and status != ''"> and status = #{status}</if>
		<if test="type != null and type != ''"> and type = #{type}</if>
		<!-- Like query -->
		<if test="realName != null and realName != ''"> and REALNAME like CONCAT(CONCAT('%', #{realName}), '%')</if>
	</sql>

	<select id="listPage" parameterType="java.util.Map" resultMap="beanMap">
		select * from
		<include refid="pms_operator" />

		<where>
			<include refid="condition_sql" />
		</where>
		order by id desc

	</select>

	<select id="listPageCount" parameterType="java.util.Map" resultType="long">
		select count(1) from
		<include refid="pms_operator" />
		<where>
			<include refid="condition_sql" />
		</where>
	</select>

	<select id="listByRoleId" parameterType="Long" resultMap="beanMap">
		select O.* from
		<include refid="pms_operator" />
		O LEFT JOIN
		<include refid="pms_role_operator" />
		RO ON
		O.ID = RO.operator_id WHERE RO.role_id = #{roleId}
	</select>

</mapper>